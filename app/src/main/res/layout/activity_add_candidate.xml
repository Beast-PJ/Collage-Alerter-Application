<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glass_background"
    android:gravity="center">

    <!-- Glassmorphic Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/glass_card"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:elevation="8dp"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Candidate"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp"
            android:gravity="center" />

        <!-- Candidate Name Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edit_text"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_email_24"
                app:tint="@android:color/black" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Candidate Name"
                android:paddingStart="10dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Candidate Position Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edit_text"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_election"
                app:tint="@android:color/black" />

            <EditText
                android:id="@+id/editPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Position"
                android:paddingStart="10dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Add Candidate Button -->
        <Button
            android:id="@+id/btnAddCandidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Candidate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_gradient"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="8dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
